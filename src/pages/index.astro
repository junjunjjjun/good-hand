---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Container from "~/components/Container.astro";
import { Image } from "astro:assets";
import Button from "~/components/Button.astro";
import Faq from "~/components/Faq.astro";
import CallToAction from "~/components/CallToAction.astro";
import ShowBlogs from "~/components/ShowBlogs.astro";
import Heading from "~/components/Heading.astro";

// Images
import TattooBackground from "~/assets/images/Tattoo.jpg";
---

<Layout title="Home" pageTitle="Home" description="Welcome to Jackfrost Tattoo - Demo acc">
	<!-- HERO SECTION -->
	<Section class:list={"relative"}>
		<Image src={TattooBackground} alt="Tattoo" class:list={"absolute inset-0 w-full h-full object-cover"} />
		<div class="bg-gradient-to-r from-fuchsia-500/60 to-teal-500/80 absolute inset-0"></div>

		<Container class:list={"relative z-10 min-h-screen"}>
			<div class="flex items-center h-full">
				<div class="ml-auto">
					<div class="prose prose-xl prose-invert text-white lg:text-right text-balance">
						<h1 class="text-5xl lg:text-8xl mb-0">Welcome to Jackfrost Tattoo</h1>
						<p>
							We specialize in minimalist fine-line tattoos. Book your session today and explore our studio in BF Homes, Parañaque.
						</p>

						<div class="not-prose mt-8">
							<Button url="/booking" color="white"> Book now! </Button>
						</div>
					</div>
				</div>
			</div>
		</Container>
	</Section>

	<!-- SERVICES -->
	<Section class:list={"bg-white"}>
		<Container>
			<Heading>
				<h2 slot="heading-title" class="h2 text-teal-500">Our Services</h2>
				<p slot="heading-content">
					We offer fine-line, minimalist, and custom-designed tattoos. Whether it's your first or your fifth, we provide a clean, safe, and creative experience.
				</p>
			</Heading>
			<p class="text-center text-gray-500">[ Services list coming soon... ]</p>
		</Container>
	</Section>

	<!-- GALLERY -->
	<Section>
		<Container>
			<Heading>
				<h2 slot="heading-title" class="h2 text-fuchsia-500">Gallery</h2>
				<p slot="heading-content">
					Check out some of our favorite tattoos we've inked. Every design tells a story—let us help you tell yours.
				</p>
			</Heading>
			<p class="text-center text-gray-500">[ Tattoo gallery coming soon... ]</p>
		</Container>
	</Section>

	<!-- FAQ -->
	<Section class:list={"bg-white"}>
		<Container>
			<Heading>
				<h2 slot="heading-title" class="h2 text-teal-500">FAQs</h2>
				<p slot="heading-content">Got questions about getting inked? We’ve got answers.</p>
			</Heading>

			<Faq
				items={[
					{ question: "Is it painful?", answer: "Pain levels vary depending on placement, but most say it's manageable. We'll walk you through everything." },
					{ question: "Do I need an appointment?", answer: "Walk-ins are welcome, but appointments ensure you get the time and artist you want." },
					{ question: "How do I prepare?", answer: "Sleep well, eat before your session, and wear comfy clothes that give easy access to the tattoo area." }
				]}
				color="teal"
			/>
		</Container>
	</Section>

	<!-- CTA -->
	<Section class:list={"relative"}>
		<Image src={TattooBackground} alt="Tattoo" class:list={"absolute inset-0 w-full h-full object-cover"} />
		<div class="bg-gradient-to-r from-fuchsia-900/80 to-teal-900/80 absolute inset-0"></div>

		<Container class:list={"relative z-10"}>
			<CallToAction
				title="Contact us today to book your session"
				link={{ title: "Book Now", url: "/booking", color: "white" }}
			/>
		</Container>
	</Section>

	<!-- BLOG -->
	<Section>
		<Container>
			<Heading>
				<h2 slot="heading-title" class="h2 text-teal-500">News & Announcements</h2>
				<p slot="heading-content">
					Get updates about flash days, artist schedules, and new design drops.
				</p>
			</Heading>

			<ShowBlogs posts={["hello-world"]} />
		</Container>
	</Section>
</Layout>
