---
import Layout from "~/layouts/Layout.astro";
---

<Layout title="Home">
  <main class="flex flex-col min-h-screen">

    <!-- HERO SECTION -->
    <section
      class="relative h-[80vh] overflow-hidden bg-cover bg-center text-white"
      style="background-image: url('/background.jpg');"
    >
      <!-- Optional dark overlay -->
      <div class="absolute inset-0 bg-black bg-opacity-50"></div>

      <div class="relative z-10 flex flex-col justify-center items-start h-full px-6 sm:px-12">
        <h1 class="text-4xl sm:text-6xl font-bold font-['Times New Roman'] mb-4 drop-shadow-md">
          Las Piñero<br />Tattoo Studio
        </h1>
        <p class="text-xl mb-6 drop-shadow-md">Tattoo Studio — Las Piñas</p>

        <a
          href="#chatbot"
          class="bg-white text-black px-6 py-3 rounded-lg shadow-md hover:scale-105 transition"
        >
          Ask Questions!
        </a>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="mt-auto py-6 text-center bg-white">
      <p class="text-sm text-gray-700">
        © 2025 <strong>Studio#1 Tattoo</strong>. All rights reserved.
      </p>
      <div class="mt-2">
        <a
          href="https://www.instagram.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="text-black hover:text-gray-600"
        >
          <svg
            class="inline w-5 h-5"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M7.75 2A5.75 5.75 0 002 7.75v8.5A5.75 5.75 0 007.75 22h8.5A5.75 5.75 0 0022 16.25v-8.5A5.75 5.75 0 0016.25 2h-8.5zM4.5 7.75a3.25 3.25 0 013.25-3.25h8.5a3.25 3.25 0 013.25 3.25v8.5a3.25 3.25 0 01-3.25 3.25h-8.5A3.25 3.25 0 014.5 16.25v-8.5zM12 7a5 5 0 100 10 5 5 0 000-10zm0 1.5a3.5 3.5 0 110 7 3.5 3.5 0 010-7zm5.25-.5a.75.75 0 100 1.5.75.75 0 000-1.5z"
            />
          </svg>
        </a>
      </div>
    </footer>
  </main>
</Layout>
