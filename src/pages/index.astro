---
import Layout from "~/layouts/Layout.astro";
---

<Layout title="Home">
  <section
    class="relative min-h-screen bg-cover bg-center text-white"
    style="background-image: url('src/assets/images/homeimage.png');"
  >
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>

    <div class="relative z-10 flex flex-col justify-center items-start h-full px-6 sm:px-12 pt-[30vh]">
      <h1 class="text-5xl sm:text-6xl font-bold font-['Times New Roman'] drop-shadow-[0_0_12px_rgba(255,255,255,0.75)] mb-4">
        Las Piñero<br />Tattoo Studio
      </h1>
      <p class="text-xl drop-shadow-[0_0_20px_rgba(255,255,255,0.9)] mb-6">
        Tattoo Studio — Las Piñas
      </p>

      <a
        href="#chatbot"
        class="bg-white text-black px-6 py-3 rounded-lg shadow hover:scale-105 transition"
      >
        Ask Questions!
      </a>
    </div>
  </section>
</Layout>
